<?xml version = "1.0"?>
<robot name = "atlas">
    <material name = "blue">
        <color rgba = "0 0 1 1"/>
    </material>

    <material name = "red">
        <color rgba = "1 0 0 1"/>
    </material>

    <material name = "green">
        <color rgba = "0 1 0 1"/>
    </material>

    <material name = "white">
        <color rgba = "1 1 1 1"/>
    </material>

    <link name="base_link">
        <visual>
            <geometry>
                <box size = "0.25 0.18 0.1"/>
            </geometry>
            <origin xyz = "0 0 0.07" rpy="0 0 0"/>
            <material name = "green"/>
        </visual>
    </link>

    <link name="camera">
        <visual>
            <geometry>
                <cylinder radius = "0.005" length = "0.01"/>
            </geometry>
            <origin xyz = "0 0 0" rpy = "0 0 0"/>
            <material name = "white"/>
        </visual>
    </link>

    <link name="Lwheel">
        <visual>
            <geometry>
                <cylinder radius = "0.028" length = "0.024"/>
            </geometry>
            <origin xyz = "0 0 0" rpy = "0 0 0"/>
            <material name = "red"/>
        </visual>
    </link>

    <link name="Rwheel">
        <visual>
            <geometry>
                <cylinder radius = "0.028" length = "0.024"/>
            </geometry>
            <origin xyz = "0 0 0" rpy = "0 0 0"/>
            <material name = "red"/>
        </visual>
    </link>

    <link name="caster">
        <visual>
            <geometry>
                <sphere radius = "0.03" />
            </geometry>
            <origin xyz = "0 0 0" rpy = "0 0 0"/>
            <material name = "red"/>
        </visual>
    </link>

    <joint name = "base_camera_joint" type = "fixed">
        <parent link = "base_link"/>
        <child link = "camera"/>
        <origin xyz = "0.125 0 0.1" rpy = "0 1.7 0"/>
    </joint>

    <joint name = "base_Lwheel_joint" type = "continuous">
        <parent link = "base_link"/>
        <child link = "Lwheel"/>
        <origin xyz = "0.1 -0.114 0" rpy = "1.5708 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <joint name = "base_Rwheel_joint" type = "continuous">
        <parent link = "base_link"/>
        <child link = "Rwheel"/>
        <origin xyz = "0.1 0.114 0" rpy = "1.5708 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <joint name = "base_caster_joint" type = "fixed">
        <parent link = "base_link"/>
        <child link = "caster"/>
        <origin xyz = "-0.1 0 0" rpy = "0 0 0"/>
    </joint>
</robot>